{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Se connecter !{% endblock %}

{% block body %}
    <form method="post">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="container d-flex flex-column mt-5">

            {% if app.user %}
                <div class="mb-3 text-center">
                    Vous êtes déjà connecté en tant que {{ app.user.userIdentifier }}.
                    <br><a href="{{ path('app_admin_formation') }}">Vers la partie admin</a> ou <a
                        href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% else %}

                <div class="row mt-5">
                    <div class="col-6 offset-3">

                        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>

                        <label for="username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username"
                               class="form-control"
                               autocomplete="email" required autofocus>
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control"
                               autocomplete="current-password"
                               required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        <button class="btn btn-lg btn-primary mt-3" data-turbo="false" type="submit">
                            Se connecter
                        </button>
                    </div>
                </div>
            {% endif %}

        </div>

    </form>
{% endblock %}
